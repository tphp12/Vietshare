<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        tools:context=".MainActivity" android:background="@color/white">

    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="14dp"
            android:paddingBottom="16dp"
            android:id="@+id/menuBottom">

        <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:layout_height="wrap_content"
                android:text="@string/fa_home_solid"
                android:textSize="26sp"
                app:solid_icon="true"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
        />
        <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:textColor="#777"
                android:layout_height="wrap_content"
                android:text="@string/fa_book_open_solid"
                android:textSize="26sp"
                app:solid_icon="true"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
        />
        <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:textColor="#777"
                android:id="@+id/userProfile"
                android:layout_height="match_parent"
                android:text="@string/fa_user"
                android:textSize="26sp"
                app:solid_icon="true"
                android:layout_marginLeft="48dp"
        />
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/menuBottom"
            android:id="@+id/mainFrame"/>

</androidx.constraintlayout.widget.ConstraintLayout>