<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/white">
    <ImageView
            android:layout_width="100dp"
            android:layout_height="45dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/mainLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="-10dp"/>
    <Button
            android:text="VN"
            android:textSize="12sp"
            android:layout_width="50dp"
            android:layout_height="24dp" android:id="@+id/versionBtn"
            android:background="@drawable/custom_button"
            android:paddingLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/mainLogo" app:layout_constraintTop_toTopOf="parent"
            android:textColor="#666"
            android:textAlignment="viewStart"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/angle_down"
    />
<!--            android:drawableEnd="@drawable/angle_down"-->
    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:padding="6dp"
            android:text="@string/fa_th_large_solid"
            android:textSize="20sp"
            app:solid_icon="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" android:id="@+id/btnCategory"/>
    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:padding="6dp"
            android:text="@string/fa_bookmark_solid"
            android:textSize="20sp"
            app:solid_icon="true"
            app:layout_constraintRight_toLeftOf="@+id/btnCategory"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" android:id="@+id/btnSaved"/>

    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:textColor="#666"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/fa_search_solid"
            android:textSize="20sp"
            app:solid_icon="true"
            app:layout_constraintRight_toLeftOf="@id/btnSaved"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true" app:layout_constraintTop_toBottomOf="@+id/mainLogo"
            android:layout_marginTop="2dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scrollbars="none"
            android:id="@+id/mainNavbar">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="horizontal" android:padding="6dp">
            <TextView
                    android:text="MỚI NHẤT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:layout_marginLeft="2dp"
                    android:textColor="@color/black" android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="CUỘC SỐNG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="KINH DOANH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="XÃ HỘI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="MƯỜI TÁM CỘNG TRỪ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainNavbar"
            android:id="@+id/navSeperator"/>
    <View
            android:layout_width="80dp"
            android:layout_height="1.6dp"
            android:background="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/navSeperator"
            android:id="@+id/checked"/>
    </androidx.constraintlayout.widget.ConstraintLayout>-->
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <androidx.recyclerview.widget.RecyclerView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvC" android:scrollbars="vertical" android:scrollbarFadeDuration="250"
                android:scrollbarDefaultDelayBeforeFade="400"
        />
    </LinearLayout>


</LinearLayout>