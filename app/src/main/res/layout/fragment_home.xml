<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="16dp" android:background="@color/white">
    <ImageView
            android:layout_width="100dp"
            android:layout_height="45dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/mainLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="-10dp"/>
    <Button
            android:text="VN"
            android:layout_width="60dp"
            android:layout_height="32dp" android:id="@+id/versionBtn"
            android:background="@drawable/custom_button"
            app:layout_constraintStart_toEndOf="@+id/mainLogo" app:layout_constraintTop_toTopOf="parent"
            android:textColor="#666" android:textAlignment="center" android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/angle_down"/>
    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:padding="6dp"
            android:text="@string/fa_th_large_solid"
            android:textSize="20sp"
            app:solid_icon="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" android:id="@+id/btnCategory"/>
    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:textColor="#666"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/fa_search_solid"
            android:textSize="20sp"
            app:solid_icon="true"
            app:layout_constraintRight_toLeftOf="@id/btnCategory"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <HorizontalScrollView
            android:layout_width="391dp"
            android:layout_height="43dp"
            android:fillViewport="true" app:layout_constraintTop_toBottomOf="@+id/mainLogo"
            android:layout_marginTop="2dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scrollbars="none"
            android:id="@+id/mainNavbar">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="horizontal" android:padding="6dp">
            <TextView
                    android:text="MỚI NHẤT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:layout_marginLeft="2dp"
                    android:textColor="@color/black" android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="CUỘC SỐNG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="KINH DOANH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="XÃ HỘI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
            <TextView
                    android:text="MƯỜI TÁM CỘNG TRỪ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="1"
                    android:textSize="14sp" android:layout_marginRight="14dp" android:textColor="#666"
                    android:padding="5dp" android:textStyle="bold"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainNavbar"
            android:id="@+id/navSeperator"/>
    <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/navSeperator"
            android:id="@+id/checked"/>
    <ScrollView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navSeperator"
            android:layout_marginTop="10dp"
            android:layout_width="390dp"
            android:layout_height="559dp" tools:layout_editor_absoluteY="106dp" tools:layout_editor_absoluteX="11dp"
            android:id="@+id/mainBody" android:fillViewport="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:id="@+id/imgContent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    app:shapeAppearanceOverlay="@style/roundedimageview"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/txtContent" android:textSize="21sp" android:textColor="@color/black"
                      android:textStyle="bold" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                      android:textAlignment="viewStart" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/txtDescription" android:textSize="13sp"
                      android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                      android:textAlignment="viewStart"
                      android:ellipsize="end"
                      android:maxLines="3"
                      android:layout_marginTop="8dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" android:layout_marginTop="8dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/txtAuthor" android:textSize="13sp" android:textColor="#777"
                          android:text="Thư Vũ"
                          android:textStyle="bold"
                          android:textAlignment="viewStart" android:layout_marginRight="6dp"/>
                <TextView
                        android:text="|"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSep"
                        android:textAlignment="viewStart" android:layout_marginRight="6dp"/>
                <TextView
                        android:text="Đời sống công nghệ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtTopic"/>
                <info.androidhive.fontawesome.FontTextView
                        android:layout_width="match_parent"
                        android:textColor="#666"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="@string/fa_bookmark_solid"
                        android:textSize="20sp"
                        app:solid_icon="true"
                        app:layout_constraintRight_toLeftOf="@id/btnCategory"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toTopOf="parent" android:textAlignment="viewEnd"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/postSeperator"/>

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:id="@+id/imgContent1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    app:shapeAppearanceOverlay="@style/roundedimageview"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/txtContent1" android:textSize="21sp" android:textColor="@color/black"
                      android:textStyle="bold" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                      android:textAlignment="viewStart" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/txtDescription1" android:textSize="13sp"
                      android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                      android:textAlignment="viewStart"
                      android:ellipsize="end"
                      android:maxLines="3"
                      android:layout_marginTop="8dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" android:layout_marginTop="8dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/txtAuthor1" android:textSize="13sp" android:textColor="#777"
                          android:text="Duy Luân"
                          android:textStyle="bold"
                          android:textAlignment="viewStart" android:layout_marginRight="6dp"/>
                <TextView
                        android:text="|"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSep1"
                        android:textAlignment="viewStart" android:layout_marginRight="6dp"/>
                <TextView
                        android:text="Cập nhật xu thế"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtTopic1"/>
                <info.androidhive.fontawesome.FontTextView
                        android:layout_width="match_parent"
                        android:textColor="#666"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="@string/fa_bookmark_solid"
                        android:textSize="20sp"
                        app:solid_icon="true"
                        app:layout_constraintRight_toLeftOf="@id/btnCategory"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toTopOf="parent" android:textAlignment="viewEnd"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/postSeperator1"/>
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>